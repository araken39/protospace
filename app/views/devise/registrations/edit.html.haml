.container.user-new
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit #{resource_name.to_s.humanize}
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .user-name_image.row.user-name.col-md-10
            = f.label :username
            %br/
            = f.text_field :username, autofocus: true, required: true
          .user-name_image.row.user-image.col-md-2
            = f.label :avatar
            %br/
            = f.file_field :avatar
          .user-name_image.row.user-name.col-md-10
            = f.label :email
            %br/
            = f.email_field :email, required: true
          .user-name_image.row.user-name.col-md-10
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off", required: true
          .user-name_image.row.user-name.col-md-10
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off"
          .user-name_image.row.user-name.col-md-10
            = f.label :member
            %br/
            = f.text_field :member, required: true
          .user-name_image.row.user-name.col-md-10
            = f.label :profile
            %br/
            = f.text_field :profile
          .user-name_image.row.user-name.col-md-10
            = f.label :works
            %br/
            = f.text_field :works
          .row.text-center.user-btn
            = f.submit "Update", class: 'btn btn-lg btn-primary btn-block'
        %h3 Cancel my account
        %p
          Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
        = link_to "Back", :back
