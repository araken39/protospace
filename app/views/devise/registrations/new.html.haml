%form.container.user-new{:action => ""}
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          -# .user-name_image.row
          -#   .user-name.col-md-10
          -#     =f.text_field :username, autofocus: true, placeholder: "Username"
          -#   .user-image.col-md-2
          -#     = f.file_field :avatar, class: "btn btn-primary"
          .field
            = f.label :email
            %br/
            = f.email_field :email, class: "user-email", placeholder:"email"
          .field
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off",class: "user-password", placeholder: "password"
          .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off",class: "user-password", placeholder: "password"
          .actions.row.text-center.user-btn
            = f.submit "Sign up", class:"btn.btn-lg btn-primary btn-block"
        = render "devise/shared/links"
